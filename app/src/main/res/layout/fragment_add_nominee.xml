<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:text_input="http://schemas.android.com/apk/res-auto"
    android:id="@+id/new_graph_data_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:gravity="center"
    android:padding="20dp"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/material_NomineeEmailEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        text_input:errorTextAppearance="@android:color/black">

        <EditText
            android:id="@+id/editText_nomineeEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:editable="false"
            android:hint="Nominee's E-mail"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="serif" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/nominate_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="Nominate"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:typeface="serif" />

</LinearLayout>