<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:id="@+id/relative_prescription_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.eHealth.recorder.util.MyTextView
            android:id="@+id/diseaseNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:alpha="0.8"
            android:background="#f75d59"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="20dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="10dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="#fff"
            android:textSize="18sp"></com.eHealth.recorder.util.MyTextView>

        <View
            android:id="@+id/prescribedBy_view_border"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/diseaseNameTextView"
            android:layout_marginBottom="2dp"
            android:background="@color/tab_Indicator_Color" />

        <TextView
            android:id="@+id/prescribedByText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prescribedBy_view_border"
            android:alpha=".60"
            android:lineSpacingMultiplier="1.2"
            android:paddingBottom="2dp"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:typeface="serif" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
